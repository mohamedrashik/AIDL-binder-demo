<resources>

    <style name="Theme.MathLibraryApp" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@drawable/squidbackround</item>
    </style>


    <style name="SquidGameButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <style name="SquidGameTextTitle">
        <item name="android:textColor">#FF007F</item> <!-- Neon pink -->
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/orbitron</item> <!-- Or montserrat_bold -->
    </style>

    <style name="SquidGameTextBody">
        <item name="android:textColor">#E0E0E0</item> <!-- Light gray -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <style name="SquidGameTextAccent">
        <item name="android:textColor">#FF007F</item> <!-- Accent color -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/orbitron_medium</item>
    </style>

</resources>