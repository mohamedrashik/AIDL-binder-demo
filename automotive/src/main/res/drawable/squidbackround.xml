<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0D0D0D"
                android:endColor="#1A1A1A"
                android:angle="270" />
        </shape>
    </item>

    <!-- Overlay shapes as drawable (optional, can use VectorDrawables) -->
    <!-- Example: Put shape icons in the top-left, center, or bottom-right using bitmap or vector drawables -->
</layer-list>